{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "alwaysStrict": true,
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src", "./typings"]
}
